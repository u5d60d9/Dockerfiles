[mysqld]
max_connections = 2000
slow-query-log=1
long_query_time=1
collation-server = utf8_unicode_ci
init-connect='SET NAMES utf8'
character-set-server = utf8
skip-character-set-client-handshake
server-id=1301
log_bin=binlog
binlog_format=ROW
innodb_flush_log_at_trx_commit=1

[client]
default-character-set   = utf8

[mysql]
default-character-set   = utf8
